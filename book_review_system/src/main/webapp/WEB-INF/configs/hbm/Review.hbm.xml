<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
	<class name="Review" table="reviews">
		<id name="id" column="id">
			<generator class="increment" />
		</id>

		<property name="numberOfStar" type="java.lang.Float">
			<column name="number_of_star" />
		</property>
		<property name="content" type="java.lang.String" not-null="true">
			<column name="content" />
		</property>
		<property name="createdAt" type="timestamp">
			<column name="created_at" />
		</property>
		<!-- User mapping -->
		<many-to-one name = "user" column = "user_id" 
         class="User" not-null="true"/>
         <!-- Category mapping -->
         <many-to-one name = "book" column = "book_id" 
         class="Book" not-null="true"/>
	</class>
</hibernate-mapping>