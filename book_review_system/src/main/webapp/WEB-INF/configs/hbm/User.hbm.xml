<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
    <class name="User" table="users">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="fullName" type="java.lang.String" not-null="true">
            <column name="full_name"/>
        </property>
        <property name="userName" type="java.lang.String" not-null="true">
            <column name="user_name"/>
        </property>
        <property name="password" type="java.lang.String" not-null="true">
            <column name="password"/>
        </property>
        <property name="phoneNumber" type="java.lang.String">
            <column name="phone_number"/>
        </property>
        <property name="email" type="java.lang.String" not-null="true">
            <column name="email"/>
        </property>

        <many-to-one name="role" column="role_id"
                     class="Role" not-null="true"/>

        <!-- List Follower -->
        <list name="followeds">
            <key column="followed_id"/>
            <list-index column="id"/>
            <one-to-many class="Follow"/>
        </list>

        <!-- List Followed -->
        <list name="followers">
            <key column="follower_id"/>
            <list-index column="id"/>
            <one-to-many class="Follow"/>
        </list>

        <!-- List Like -->
        <list name="likes">
            <key column="user_id"/>
            <list-index column="id"/>
            <one-to-many class="Like"/>
        </list>

        <!-- List Activity -->
        <list name="activities">
            <key column="user_id"/>
            <list-index column="id"/>
            <one-to-many class="Activity"/>
        </list>

        <!-- List Request -->
        <list name="requests">
            <key column="user_id"/>
            <list-index column="id"/>
            <one-to-many class="Request"/>
        </list>

        <!-- List Mark -->
        <list name="marks">
            <key column="user_id"/>
            <list-index column="id"/>
            <one-to-many class="Mark"/>
        </list>

        <!-- List Review -->
        <list name="reviews">
            <key column="user_id"/>
            <list-index column="id"/>
            <one-to-many class="Review"/>
        </list>

        <!-- List Comment -->
        <list name="comments">
            <key column="user_id"/>
            <list-index column="id"/>
            <one-to-many class="Comment"/>
        </list>
    </class>
</hibernate-mapping>