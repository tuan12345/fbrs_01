<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
	<class name="Book" table="Books">
		<id name="id" column="id">
			<generator class="increment" />
		</id>

		<property name="tittle" type="java.lang.String">
			<column name="tittle" />
		</property>
		<property name="publishDate" type="timestamp">
			<column name="publish_date" />
		</property>
		<property name="authorName" type="java.lang.String">
			<column name="author_name" />
		</property>
		<property name="numberOfPage" type="java.lang.Integer">
			<column name="number_of_page" />
		</property>
		<property name="image" type="java.lang.String">
			<column name="image" />
		</property>
		 <many-to-one name = "category" column = "category_id" 
         class="Role" not-null="true"/>
      	<!-- List Mark -->
		<list name = "marks">
         	<key column = "book_id"/>
         	<list-index column = "id"/>
        	<one-to-many class="Mark"/>
      	</list>
      	<!-- List Review -->
		<list name = "reviews">
         	<key column = "book_id"/>
         	<list-index column = "id"/>
        	<one-to-many class="Review"/>
      	</list>
	</class>
</hibernate-mapping>