<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="app.model">
	<class name="Review" table="reviews">
		<id name="id" column="id">
			<generator class="increment" />
		</id>

		<property name="numberOfStar" type="float">
			<column name="number_of_star" />
		</property>
		<property name="content" type="string">
			<column name="content" />
		</property>
		<property name="createdAt" type="date">
			<column name="created_at" />
		</property>
		<!-- User mapping -->
		<many-to-one name="user" column="user_id" class="User"
			not-null="true" />
		<!-- Category mapping -->
		<many-to-one name="book" column="book_id" class="Book"
			not-null="true" />
		<list name="comments" lazy="false">
			<key column="review_id" />
			<list-index column="id" />
			<one-to-many class="Review" />
		</list>
	</class>
</hibernate-mapping>